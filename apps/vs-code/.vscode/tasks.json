{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "pnpm: compile",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source $NVM_DIR/nvm.sh && nvm use && pnpm compile"
            ],
            "group": "build",
            "presentation": {
                "panel": "shared",
                "reveal": "silent"
            },
            "problemMatcher": "$tsc"
        },
        {
            "label": "pnpm: lint",
            "type": "shell",
            "command": "bash",
            "args": [
                "-c",
                "source $NVM_DIR/nvm.sh && nvm use && pnpm lint"
            ],
            "group": "test",
            "presentation": {
                "panel": "shared",
                "reveal": "always"
            },
            "problemMatcher": "$tsc"
        }
    ]
}
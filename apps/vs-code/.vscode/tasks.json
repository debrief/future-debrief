{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "dev:vs-code",
      "type": "shell",
      "command": "bash",
      "args": [
        "-c",
        "export NVM_DIR=\"$HOME/.nvm\" && [ -s \"$NVM_DIR/nvm.sh\" ] && \\. \"$NVM_DIR/nvm.sh\" && nvm use && pnpm run dev:vs-code"
      ],
      "options": {
        "cwd": "${workspaceFolder}/../.."
      },
      "group": "build",
      "isBackground": true,
      "problemMatcher": {
        "base": "$tsc-watch",
        "background": {
          "activeOnStart": true,
          "beginsPattern": "pnpm run dev:vs-code",
          "endsPattern": "^.*watching for changes.*$"
        }
      },
      "presentation": {
        "panel": "shared",
        "reveal": "always"
      }
    },
    {
      "label": "build:vs-code-extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["turbo", "run", "build", "--filter=vs-code..."],
      "group": "build",
      "problemMatcher": [],
      "presentation": {
        "panel": "shared",
        "reveal": "silent"
      }
    },
    {
      "label": "lint:vs-code-extension",
      "type": "shell",
      "command": "pnpm",
      "args": ["turbo", "run", "lint", "--filter=vs-code..."],
      "group": "test",
      "problemMatcher": [],
      "presentation": {
        "panel": "shared",
        "reveal": "always"
      }
    }
  ]
}
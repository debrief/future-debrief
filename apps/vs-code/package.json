{
  "name": "vs-code",
  "displayName": "Debrief Extension",
  "description": "VS Code extension facilitating Debrief capabilities.",
  "version": "0.0.1",
  "publisher": "ian",
  "repository": {
    "type": "git",
    "url": "https://github.com/debrief/future-debrief/apps/vs-code.git"
  },
  "scripts": {
    "clean": "rm -rf dist/* media/web-components.js media/web-components.css python/ schemas/ tool-vault/",
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "copy-webcomponents": "cp ../../libs/web-components/dist/vanilla/index.js media/web-components.js && cp ../../libs/web-components/dist/vanilla/index.css media/web-components.css",
    "copy-schemas": "mkdir -p schemas && cp -r ../../libs/shared-types/derived/json-schema/* schemas/",
    "bundle-python-wheel": "mkdir -p python && cp ../../libs/shared-types/dist/python/*.whl python/ 2>/dev/null || echo 'No Python wheel found - run pnpm build:shared-types first'",
    "compile": "pnpm esbuild-base --sourcemap && pnpm copy-webcomponents && pnpm copy-schemas && pnpm bundle-python-wheel",
    "build": "pnpm vscode:prepublish && vsce package --no-dependencies",
    "build:docker": "pnpm build && cp vs-code-0.0.1.vsix ../../",
    "watch": "pnpm esbuild-base --sourcemap --watch",
    "dev": "pnpm copy-webcomponents && pnpm watch",
    "vscode:prepublish": "pnpm esbuild-base --minify && pnpm copy-webcomponents && pnpm copy-schemas && pnpm bundle-python-wheel",
    "docker:build": "docker build -t debrief-vscode-local --build-arg GITHUB_SHA=local --build-arg PR_NUMBER=dev -f Dockerfile ../..",
    "docker:run": "docker run -p 8080:8080 -p 60123:60123 -p 60124:60124 debrief-vscode-local",
    "docker:stop": "docker stop debrief-vscode-local && docker rm debrief-vscode-local",
    "docker:logs": "docker logs debrief-vscode-local",
    "docker:logs:follow": "docker logs -f debrief-vscode-local",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint": "pnpm typecheck && pnpm eslint",
    "test": "jest",
    "validate": "make verify"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "plot-json",
        "aliases": [
          "Plot JSON",
          "plot-json"
        ],
        "extensions": [
          ".plot.json"
        ],
        "configuration": "./language-configuration.json",
        "mimetypes": [
          "application/json"
        ]
      }
    ],
    "commands": [
      {
        "command": "vs-code.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "customOutline.selectFeature",
        "title": "Select Feature"
      },
      {
        "command": "debrief.undo",
        "title": "Debrief: Undo"
      },
      {
        "command": "debrief.redo",
        "title": "Debrief: Redo"
      },
      {
        "command": "debrief.restartToolVault",
        "title": "Restart Tool Vault Server"
      },
      {
        "command": "debrief.toggleDevelopmentMode",
        "title": "Debrief: Toggle Development Mode"
      },
      {
        "command": "debrief.toolVaultStatus",
        "title": "Debrief: Tool Vault Server Status"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "debrief",
          "title": "Debrief",
          "icon": "media/debrief-icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "vs-code.helloView",
          "name": "Hello World",
          "when": "!config.debrief.development.mode"
        },
        {
          "id": "customGeoJsonOutline",
          "name": "GeoJSON Features",
          "when": "true"
        }
      ],
      "debrief": [
        {
          "id": "debrief.activity",
          "name": "Activity",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "menus": {},
    "customEditors": [
      {
        "viewType": "plotJsonEditor",
        "displayName": "Plot JSON Viewer",
        "selector": [
          {
            "filenamePattern": "*.plot.json"
          }
        ]
      }
    ],
    "jsonValidation": [
      {
        "fileMatch": "*.plot.json",
        "url": "./schemas/features/FeatureCollection.schema.json"
      }
    ],
    "configuration": {
      "title": "Debrief",
      "properties": {
        "debrief.toolVault.serverPath": {
          "type": "string",
          "description": "Path to the Tool Vault .pyz file",
          "scope": "resource"
        },
        "debrief.toolVault.autoStart": {
          "type": "boolean",
          "default": true,
          "description": "Automatically start the Tool Vault server on extension activation",
          "scope": "resource"
        },
        "debrief.toolVault.port": {
          "type": "number",
          "default": 60124,
          "description": "Port for the Tool Vault server",
          "scope": "resource"
        },
        "debrief.toolVault.host": {
          "type": "string",
          "default": "127.0.0.1",
          "description": "Host address for the Tool Vault server",
          "scope": "resource"
        },
        "debrief.development.mode": {
          "type": "boolean",
          "default": false,
          "description": "Enable development mode to reduce UI clutter and show only essential views",
          "scope": "resource"
        },
        "debrief.timeController.format": {
          "type": "string",
          "enum": [
            "rn-short",
            "plain",
            "iso",
            "rn-long"
          ],
          "enumDescriptions": [
            "Royal Navy Short: 151430Z",
            "Plain English: Jan 15, 2024, 14:30:00 UTC",
            "ISO 8601: 2024-01-15T14:30:00.000Z",
            "Royal Navy Long: JAN 151430Z"
          ],
          "default": "rn-short",
          "description": "Time display format for the Time Controller",
          "scope": "resource"
        }
      }
    }
  },
  "devDependencies": {
    "@debrief/shared-types": "workspace:^1.0.0",
    "@eslint/js": "^9.34.0",
    "@types/jest": "^29.5.14",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.4.1",
    "typescript": "^4.9.4",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "@debrief/web-components": "workspace:^1.0.0",
    "@vscode/codicons": "^0.0.40",
    "leaflet": "^1.9.4",
    "ws": "^8.14.2"
  }
}

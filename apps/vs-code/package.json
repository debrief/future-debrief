{
  "name": "codespace-extension",
  "displayName": "Codespace Extension",
  "description": "VS Code extension demonstrator for Codespace preview from PRs",
  "version": "0.0.1",
  "publisher": "ian",
  "repository": {
    "type": "git",
    "url": "https://github.com/debrief/codespace-extension.git"
  },
  "scripts": {
    "esbuild-base": "esbuild ./src/extension.ts --bundle --outfile=dist/extension.js --external:vscode --format=cjs --platform=node",
    "compile": "pnpm esbuild-base --sourcemap",
    "build": "pnpm compile",
    "watch": "pnpm esbuild-base --sourcemap --watch",
    "dev": "pnpm watch",
    "vscode:prepublish": "pnpm esbuild-base --minify",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint": "pnpm typecheck && pnpm eslint"
  },
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "plot-json",
        "aliases": [
          "Plot JSON",
          "plot-json"
        ],
        "extensions": [
          ".plot.json"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "commands": [
      {
        "command": "codespace-extension.helloWorld",
        "title": "Hello World"
      },
      {
        "command": "customOutline.selectFeature",
        "title": "Select Feature"
      },
      {
        "command": "debrief.selectFeature",
        "title": "Select Feature in Debrief Panel"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "debrief",
          "title": "Debrief",
          "icon": "media/debrief-icon.svg"
        }
      ]
    },
    "views": {
      "explorer": [
        {
          "id": "codespace-extension.helloView",
          "name": "Hello World",
          "when": "true"
        },
        {
          "id": "customGeoJsonOutline",
          "name": "GeoJSON Features",
          "when": "true"
        }
      ],
      "debrief": [
        {
          "id": "debrief.timeController",
          "name": "Time Controller",
          "type": "webview",
          "when": "true"
        },
        {
          "id": "debrief.outline",
          "name": "Outline",
          "type": "tree",
          "when": "true"
        },
        {
          "id": "debrief.propertiesView",
          "name": "Properties View",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "plotJsonEditor",
        "displayName": "Plot JSON Viewer",
        "selector": [
          {
            "filenamePattern": "*.plot.json"
          }
        ]
      }
    ]
  },
  "devDependencies": {
    "@debrief/shared-types": "workspace:^1.0.0",
    "@debrief/web-components": "workspace:^1.0.0",
    "@eslint/js": "^9.34.0",
    "@types/node": "18.x",
    "@types/vscode": "^1.74.0",
    "@types/ws": "^8.5.10",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "@vscode/vsce": "^3.6.0",
    "esbuild": "^0.25.9",
    "eslint": "^9.34.0",
    "typescript": "^4.9.4",
    "typescript-eslint": "^8.42.0"
  },
  "dependencies": {
    "leaflet": "^1.9.4",
    "ws": "^8.14.2"
  }
}

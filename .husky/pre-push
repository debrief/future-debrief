#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run fast pre-push validation using parallel Makefile verify targets
echo "ğŸš€ Running pre-push validation..."
if find . -path "*/*/Makefile" -not -path "*/node_modules/*" -exec dirname {} \; | xargs -I {} -P 4 sh -c 'cd "{}" && echo "âœ… $(basename $(pwd))" && make verify > /dev/null || (echo "âŒ $(basename $(pwd)) failed - run '\''cd {} && make verify'\'' for details" && exit 1)'; then
    echo "âœ… All validations passed!"
else
    echo "âŒ Pre-push validation failed!"
    exit 1
fi
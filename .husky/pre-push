#!/bin/sh
. "$(dirname "$0")/_/husky.sh"

# Run fast pre-push validation using parallel Makefile verify targets
echo "🚀 Running pre-push validation..."
find . -path "*/*/Makefile" -not -path "*/node_modules/*" -exec dirname {} \; | xargs -I {} -P 4 sh -c 'cd "{}" && echo "✅ $(basename $(pwd))" && make verify || (echo "❌ $(basename $(pwd)) failed" && exit 1)'
echo "✅ All validations passed!"
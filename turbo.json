{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build": {
      "outputs": ["dist/**"],  
      "inputs": ["src/**", "schemas/**", "derived/**"],
      "dependsOn": ["^build"]
    },
    "build:ci": {
      "outputs": ["dist/**"],  
      "inputs": ["src/**", "schemas/**", "derived/**"],
      "dependsOn": ["^build:ci"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**", "schemas/**", "derived/**"]
    },
    "typecheck": {
      "outputs": []
    },
    "lint": {
      "outputs": []
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "storybook": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**", ".storybook/**", "stories/**"]
    },
    "clean": {
      "cache": false
    }
  }
}
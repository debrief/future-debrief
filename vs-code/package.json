{
  "name": "debrief-vscode",
  "displayName": "debrief-vscode",
  "description": "Vs Code extension for Debrie Analysis Tool",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.103.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "debriefOutline.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      },
      {
        "command": "debriefTimeline.refresh",
        "title": "Refresh",
        "icon": "$(refresh)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "debrief",
          "title": "Debrief",
          "icon": "media/debrief-icon.svg"
        }
      ]
    },
    "views": {
      "debrief": [
        {
          "id": "debriefTimeline",
          "name": "Time Controller",
          "type": "webview",
          "when": "true"
        },
        {
          "id": "debriefOutline",
          "name": "Outline",
          "type": "webview",
          "when": "true"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "debriefOutline.refresh",
          "when": "view == debriefOutline",
          "group": "navigation"
        },
        {
          "command": "debriefTimeline.refresh",
          "when": "view == debriefTimeline",
          "group": "navigation"
        }
      ]
    },
    "customEditors": [
      {
        "viewType": "debrief.plotEditor",
        "displayName": "Debrief Plot Editor",
        "selector": [
          {
            "filenamePattern": "*.plot.json"
          }
        ]
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "yarn run package",
    "compile": "yarn run build:webviews && webpack",
    "watch": "concurrently \"webpack --watch\" \"yarn run watch:webviews\"",
    "package": "yarn run build:webviews && webpack --mode production --devtool hidden-source-map",
    "build:webviews": "vite build",
    "watch:webviews": "vite build --watch",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "yarn run compile-tests && yarn run compile && yarn run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/geojson": "^7946.0.16",
    "@types/mocha": "^10.0.10",
    "@types/node": "22.x",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@types/vscode": "^1.103.0",
    "@typescript-eslint/eslint-plugin": "^8.39.0",
    "@typescript-eslint/parser": "^8.39.0",
    "@vitejs/plugin-react": "^5.0.1",
    "@vscode/test-cli": "^0.0.11",
    "@vscode/test-electron": "^2.5.2",
    "concurrently": "^9.2.0",
    "eslint": "^9.32.0",
    "ts-loader": "^9.5.2",
    "typescript": "^5.9.2",
    "vite": "^7.1.3",
    "webpack": "^5.101.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.1.1",
    "react-dom": "^19.1.1"
  }
}

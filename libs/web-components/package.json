{
  "name": "@debrief/web-components",
  "version": "1.0.0",
  "type": "module",
  "description": "Reusable web components for Debrief ecosystem with dual consumption support (React + Vanilla JS)",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "exports": {
    ".": {
      "types": "./src/index.ts",
      "import": "./src/index.ts"
    },
    "./vanilla": {
      "types": "./dist/vanilla/vanilla-generated.d.ts",
      "import": "./dist/vanilla/index.js",
      "require": "./dist/vanilla/index.js"
    }
  },
  "files": [
    "src/",
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf dist/*",
    "build:vanilla": "esbuild src/vanilla-generated.tsx --bundle --outdir=dist/vanilla --entry-names=index --format=iife --minify --define:process.env.NODE_ENV='\"production\"' --jsx=automatic",
    "build:types:vanilla": "tsc --project tsconfig.vanilla.json --outDir dist/vanilla",
    "build": "pnpm clean && pnpm build:vanilla && pnpm build:types:vanilla",
    "build:ci": "pnpm clean && pnpm lint && pnpm build:vanilla && pnpm build:types:vanilla",
    "dev": "pnpm build",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "validate": "make verify",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "eslint": "eslint . --ext .ts,.tsx",
    "eslint:fix": "eslint . --ext .ts,.tsx --fix",
    "lint": "pnpm typecheck && pnpm eslint",
    "chromatic": "npx chromatic --exit-zero-on-changes"
  },
  "dependencies": {
    "@debrief/shared-types": "workspace:^1.0.0",
    "@types/leaflet": "^1.9.20",
    "@vscode-elements/elements": "^2.3.1",
    "@vscode-elements/react-elements": "^2.3.1",
    "@vscode/codicons": "^0.0.40",
    "leaflet": "^1.9.4",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-leaflet": "^5.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.34.0",
    "@storybook/addon-links": "^9.1.4",
    "@storybook/react": "^9.1.4",
    "@storybook/react-vite": "^9.1.4",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.0.0",
    "@types/react": "^19.1.12",
    "@types/react-dom": "^19.1.9",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "chromatic": "^13.1.4",
    "concurrently": "^9.2.1",
    "esbuild": "^0.19.0",
    "eslint": "^9.34.0",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.0.0",
    "nodemon": "^3.1.10",
    "storybook": "^9.1.4",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.42.0",
    "vite": "^5.4.19"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "debrief",
    "web-components",
    "typescript"
  ],
  "author": "Debrief Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debrief/future-debrief.git",
    "directory": "libs/web-components"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

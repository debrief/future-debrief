{
  "name": "@debrief/web-components",
  "version": "1.0.0",
  "description": "Reusable web components for Debrief ecosystem with dual consumption support (React + Vanilla JS)",
  "main": "dist/react/index.js",
  "types": "dist/react/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/react/index.d.ts",
      "import": "./dist/react/index.js",
      "require": "./dist/react/index.js"
    },
    "./vanilla": {
      "types": "./dist/vanilla/index.d.ts",
      "import": "./dist/vanilla/index.js",
      "require": "./dist/vanilla/index.js"
    }
  },
  "files": [
    "dist/"
  ],
  "scripts": {
    "clean": "rm -rf dist/*",
    "build:react": "esbuild src/index.ts --bundle --outfile=dist/react/index.js --format=esm --external:react --external:react-dom",
    "build:vanilla": "esbuild src/vanilla.ts --bundle --outfile=dist/vanilla/index.js --format=esm",
    "build:types": "tsc --emitDeclarationOnly --outDir dist/react && tsc --emitDeclarationOnly --outDir dist/vanilla",
    "build": "pnpm clean && pnpm build:react && pnpm build:vanilla && pnpm build:types",
    "dev": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "test": "jest",
    "test:watch": "jest --watch",
    "typecheck": "tsc --noEmit",
    "storybook": "storybook dev -p 6006"
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0"
  },
  "devDependencies": {
    "@storybook/addon-essentials": "^7.6.20",
    "@storybook/addon-interactions": "^7.6.20",
    "@storybook/addon-links": "^7.6.20",
    "@storybook/blocks": "^7.6.20",
    "@storybook/react": "^7.6.20",
    "@storybook/react-vite": "^7.6.20",
    "@storybook/testing-library": "^0.0.14-next.2",
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^14.0.0",
    "@testing-library/user-event": "^14.4.3",
    "@types/jest": "^29.0.0",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "esbuild": "^0.19.0",
    "identity-obj-proxy": "^3.0.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.0.0",
    "storybook": "^7.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "keywords": [
    "react",
    "components",
    "ui",
    "debrief",
    "web-components",
    "typescript"
  ],
  "author": "Debrief Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/debrief/future-debrief.git",
    "directory": "libs/web-components"
  },
  "engines": {
    "node": ">=16.0.0"
  }
}

{
  "name": "tool-vault-packager",
  "version": "1.0.0",
  "description": "ToolVault packaging system for creating deployable .pyz files",
  "main": "cli.py",
  "scripts": {
    "clean": "rm -f *.pyz && rm -rf tmp_package_contents",
    "build": "python packager.py tools --output toolvault.pyz",
    "build:spa": "cd spa && npm install && npm run build",
    "prebuild": "npm run clean && npm run build:spa",
    "serve": "python cli.py serve",
    "dev:spa": "cd spa && npm run dev",
    "dev:spa:with-backend": "cd spa && npm run dev:with-backend",
    "test": "test -f toolvault.pyz && echo 'Test passed: toolvault.pyz exists' || (echo 'Test failed: toolvault.pyz not found' && exit 1)",
    "test:playwright": "playwright test",
    "test:playwright:ui": "playwright test --ui",
    "test:playwright:debug": "playwright test --debug",
    "test:playwright:both": "node test-runner.js",
    "test:playwright:dev": "node test-runner.js dev",
    "test:playwright:pyz": "node test-runner.js pyz"
  },
  "keywords": [
    "toolvault",
    "mcp",
    "packaging"
  ],
  "author": "ToolVault",
  "license": "MIT",
  "dependencies": {
    "@debrief/shared-types": "workspace:^1.0.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.55.0",
    "typescript": "^5.0.0"
  }
}

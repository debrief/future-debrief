{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/debrief/schemas/tools/ToolCallResponse.schema.json",
  "title": "Tool Call Response",
  "description": "Response format for tool execution results containing ToolVault commands",
  "type": "object",
  "properties": {
    "result": {
      "title": "ToolVault Command",
      "description": "A command returned by a ToolVault tool.",
      "type": "object",
      "oneOf": [
        {
          "properties": {
            "command": { "const": "addFeatures" },
            "payload": {
              "type": "array",
              "items": { "$ref": "../features/FeatureCollection.schema.json#/$defs/DebriefFeature" }
            }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "updateFeatures" },
            "payload": {
              "type": "array",
              "items": { "$ref": "../features/FeatureCollection.schema.json#/$defs/DebriefFeature" }
            }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "deleteFeatures" },
            "payload": {
              "type": "array",
              "items": { "type": "string" }

            }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "setFeatureCollection" },
            "payload": { "$ref": "../features/FeatureCollection.schema.json" }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "showText" },
            "payload": { "type": "string" }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "showData" },
            "payload": {
              "type": "object",
              "properties": {
                "shape": {
                  "type": "array",
                  "items": { "type": "integer", "minimum": 1 },
                  "minItems": 1
                },
                "axes": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "name": { "type": "string" },
                      "values": { "type": "array" }
                    },
                    "required": ["name"],
                    "additionalProperties": false
                  }
                },
                "values": {
                  "type": "array",
                  "items": {
                    "anyOf": [
                      { "type": "string" },
                      { "type": "number" },
                      { "type": "boolean" },
                      { "type": "null" },
                      { "$ref": "#/$defs/nestedArray" }
                    ]
                  }
                }
              },
              "required": ["shape", "values"],
              "additionalProperties": false
            }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "showImage" },
            "payload": {
              "type": "object",
              "properties": {
                "mediaType": { "type": "string", "enum": ["image/png", "image/svg+xml"] },
                "data": { "type": "string", "contentEncoding": "base64" }
              },
              "required": ["mediaType", "data"],
              "additionalProperties": false
            }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "logMessage" },
            "payload": { "type": "string" }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        },
        {
          "properties": {
            "command": { "const": "composite" },
            "payload": {
              "type": "array",
              "items": {
                "type": "object",
                "properties": {
                  "command": { "type": "string" },
                  "payload": { "type": ["object", "array", "string", "number", "boolean", "null"] }
                },
                "required": ["command", "payload"],
                "additionalProperties": false
              }
            }
          },
          "required": ["command", "payload"],
          "additionalProperties": false
        }
      ]
    },
    "isError": {
      "type": "boolean",
      "description": "Optional flag indicating if the result represents an error condition",
      "default": false
    }
  },
  "required": ["result"],
  "additionalProperties": false,
  "$defs": {
    "nestedArray": {
      "type": "array",
      "items": {
        "anyOf": [
          { "type": "string" },
          { "type": "number" },
          { "type": "boolean" },
          { "type": "null" },
          { "$ref": "#/$defs/nestedArray" }
        ]
      }
    }
  }
}
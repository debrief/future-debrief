{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/debrief/schemas/tools/ToolCallRequest.schema.json",
  "title": "Tool Call Request",
  "description": "Request model for tool call endpoint matching current Pydantic implementation",
  "$defs": {
    "ToolArgument": {
      "description": "Individual tool argument with name and value.",
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "title": "Name",
          "description": "The parameter name"
        },
        "value": {
          "title": "Value",
          "description": "The parameter value (accepts any type)",
          "type": ["string", "number", "boolean", "object", "array", "null"]
        }
      },
      "required": ["name", "value"],
      "additionalProperties": false
    }
  },
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "title": "Name",
      "description": "The name of the tool to call"
    },
    "arguments": {
      "type": "array",
      "title": "Arguments",
      "description": "Tool arguments as an array of named parameters",
      "items": {
        "$ref": "#/$defs/ToolArgument"
      }
    }
  },
  "required": ["name", "arguments"],
  "additionalProperties": false
}
{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.debrief.org/tools/mcptoolcallrequest.schema.json",
  "title": "MCP Tool Call Request",
  "description": "Request format for calling an MCP tool with features and configuration parameters",
  "type": "object",
  "properties": {
    "name": {
      "type": "string",
      "description": "The name of the tool to call"
    },
    "arguments": {
      "type": "array",
      "description": "Tool arguments as an array of named parameters",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The parameter name (e.g., 'source', 'threshold', 'includeSpeed')"
          },
          "value": {
            "oneOf": [
              {
                "type": "string",
                "description": "String configuration parameter"
              },
              {
                "type": "number",
                "description": "Numeric configuration parameter"
              },
              {
                "type": "boolean",
                "description": "Boolean configuration parameter"
              },
              {
                "type": "string",
                "enum": ["placeholder"],
                "description": "Enum configuration parameter (values are tool-specific)"
              },
              {
                "$ref": "../features/FeatureCollection.schema.json#/$defs/DebriefFeature",
                "description": "Individual GeoJSON feature (e.g., 'source', 'receiver', 'target')"
              },
              {
                "type": "array",
                "items": {
                  "$ref": "../features/FeatureCollection.schema.json#/$defs/DebriefFeature"
                },
                "description": "Array of GeoJSON features (e.g., 'tracks', 'waypoints', 'contacts')"
              }
            ]
          }
        },
        "required": ["name", "value"],
        "additionalProperties": false
      }
    }
  },
  "required": ["name", "arguments"],
  "additionalProperties": false
}
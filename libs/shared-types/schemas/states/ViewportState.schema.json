{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://example.org/debrief/schemas/states/ViewportState.schema.json",
  "title": "ViewportState",
  "description": "State representing the current map viewport bounds in a Debrief editor",
  "type": "object",
  "properties": {
    "bounds": {
      "type": "array",
      "description": "Map bounds as [west, south, east, north] in decimal degrees",
      "items": {
        "type": "number"
      },
      "minItems": 4,
      "maxItems": 4
    }
  },
  "required": ["bounds"],
  "additionalProperties": false,
  "examples": [
    {
      "bounds": [-10.0, 50.0, 2.0, 58.0]
    }
  ]
}
{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.debrief.org/annotation.schema.json",
  "title": "Debrief Annotation Feature",
  "description": "A GeoJSON Feature representing an annotation with any geometry type",
  "type": "object",
  "required": ["type", "id", "geometry", "properties"],
  "properties": {
    "type": {
      "type": "string",
      "const": "Feature"
    },
    "id": {
      "type": ["string", "number"],
      "description": "Unique identifier for this feature"
    },
    "geometry": {
      "oneOf": [
        {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Point"]
            },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "maxItems": 3,
              "items": {
                "type": "number"
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["LineString"]
            },
            "coordinates": {
              "type": "array",
              "minItems": 2,
              "items": {
                "type": "array",
                "minItems": 2,
                "maxItems": 3,
                "items": {
                  "type": "number"
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["Polygon"]
            },
            "coordinates": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "array",
                "minItems": 4,
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 3,
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["MultiPoint"]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "minItems": 2,
                "maxItems": 3,
                "items": {
                  "type": "number"
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["MultiLineString"]
            },
            "coordinates": {
              "type": "array",
              "minItems": 1,
              "items": {
                "type": "array",
                "minItems": 2,
                "items": {
                  "type": "array",
                  "minItems": 2,
                  "maxItems": 3,
                  "items": {
                    "type": "number"
                  }
                }
              }
            }
          },
          "additionalProperties": false
        },
        {
          "type": "object",
          "required": ["type", "coordinates"],
          "properties": {
            "type": {
              "type": "string",
              "enum": ["MultiPolygon"]
            },
            "coordinates": {
              "type": "array",
              "items": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "type": "array",
                  "minItems": 4,
                  "items": {
                    "type": "array",
                    "minItems": 2,
                    "maxItems": 3,
                    "items": {
                      "type": "number"
                    }
                  }
                }
              }
            }
          },
          "additionalProperties": false
        }
      ]
    },
    "properties": {
      "type": "object",
      "required": ["featureType"],
      "properties": {
        "featureType": {
          "type": "string",
          "enum": ["annotation"],
          "description": "Discriminator to identify this as an annotation feature"
        },
        "annotationType": {
          "type": "string",
          "enum": ["label", "area", "measurement", "comment", "boundary"],
          "description": "Type of annotation"
        },
        "text": {
          "type": "string",
          "description": "Text content of the annotation"
        },
        "color": {
          "type": "string",
          "pattern": "^#[0-9a-fA-F]{6}$",
          "description": "Color code in hex format"
        },
        "time": {
          "type": "string",
          "format": "date-time",
          "description": "Timestamp when annotation was created"
        },
        "name": {
          "type": "string",
          "description": "Human readable name for this annotation"
        },
        "description": {
          "type": "string",
          "description": "Additional description or notes about this annotation"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}
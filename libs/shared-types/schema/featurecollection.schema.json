{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "$id": "https://schemas.debrief.org/featurecollection.schema.json",
  "title": "Debrief FeatureCollection",
  "description": "A GeoJSON FeatureCollection containing mixed feature types for maritime analysis",
  "type": "object",
  "required": ["type", "features"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["FeatureCollection"]
    },
    "features": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["type", "id", "geometry", "properties"],
        "properties": {
          "type": {
            "type": "string",
            "enum": ["Feature"]
          },
          "id": {
            "type": ["string", "number"],
            "description": "Unique identifier for this feature"
          },
          "geometry": {
            "type": "object",
            "description": "Any valid GeoJSON geometry"
          },
          "properties": {
            "type": "object",
            "description": "Feature properties"
          }
        }
      }
    },
    "bbox": {
      "type": "array",
      "minItems": 4,
      "maxItems": 6,
      "items": {
        "type": "number"
      },
      "description": "Bounding box of the feature collection"
    },
    "properties": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "description": "Human readable name for this collection"
        },
        "description": {
          "type": "string",
          "description": "Description of this feature collection"
        },
        "created": {
          "type": "string",
          "format": "date-time",
          "description": "When this collection was created"
        },
        "modified": {
          "type": "string",
          "format": "date-time",
          "description": "When this collection was last modified"
        },
        "version": {
          "type": "string",
          "description": "Version of this collection"
        }
      },
      "additionalProperties": true
    }
  },
  "additionalProperties": false
}